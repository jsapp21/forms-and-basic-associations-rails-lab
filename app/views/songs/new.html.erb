<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br /><br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br /><br />

  <%= f.label :genre %>
  <%= f.collection_select(:genre_id, @genres, :id, :name) %>
  <br /><br />

  <label>Song Note 1:</label>
  <input name="song[note_contents][]" id="song_notes_1">
  <label>Song Note 2:</label>
  <input name="song[note_contents][]" id="song_notes_2">
  <label>Song Note 3:</label>
  <input name="song[note_contents][]" id="song_notes_3">
  <input type="submit" value="Submit">
  <br /><br />

  <%= f.submit %>
<% end %>


